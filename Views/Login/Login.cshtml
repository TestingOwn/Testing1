@model FormApplication.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="mb-3" >
    @Html.LabelFor(x => x.UserName,htmlAttributes: new {@class = "form-label" })
      
    @Html.TextBoxFor(x => x.UserName, htmlAttributes : new { @class = "form-control" })
       
    </div>
    <div class="mb-3">
    @Html.LabelFor(x => x.Password,htmlAttributes: new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Password,htmlAttributes: new{@class="form-control"})
    </div>
    <div class="mb-3">

    <button type="submit" class="btn-primary" >Submit</button>
    </div>
}

