@model IEnumerable<FormApplication.Models.Form>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @{ 
                var role = Session["Role"].ToString();
            }
            @if (role == "admin")
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.FormId })
            }
            @Html.ActionLink("Details", "Details", new { id = item.FormId })
            @if (role == "admin")
            {
            @Html.ActionLink("Delete", "Delete", new { id = item.FormId })
            }|
        </td>
    </tr>
}

</table>
